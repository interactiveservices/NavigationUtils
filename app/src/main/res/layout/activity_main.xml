<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_savedProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_save_program"
        android:padding="@dimen/main_padding"/>

    <Button
        android:id="@+id/bnt_openChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_padding"
        android:text="Open Chooser" />

    <Button
        android:id="@+id/bnt_clearSaveProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Save Program" />

</LinearLayout>
